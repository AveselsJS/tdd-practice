{
  "name": "tdd-practice",
  "version": "1.0.0",
  "description": "test driven development practice",
  "main": "app.js",
  "scripts": {
    "dev:server": "cross-env NODE_ENV=development nodemon index.js",
    "jest:test": "cross-env NODE_ENV=test jest --watch",
    "lint": "eslint . --fix",
    "http:server": "http-server -c-1 -p 8080 -P http://localhost:3000"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AveselsJS/tdd-practice.git"
  },
  "author": "Vladislav Pestsov <vladislav.pestsov@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/AveselsJS/tdd-practice/issues"
  },
  "homepage": "https://github.com/AveselsJS/tdd-practice#readme",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "config": "^3.3.6",
    "express": "^4.17.2",
    "express-validator": "^6.14.0",
    "http-server": "^14.0.0",
    "i18next": "^21.6.5",
    "i18next-fs-backend": "^1.1.4",
    "i18next-http-middleware": "^3.1.5",
    "jest-watcher": "^27.4.6",
    "nodemailer": "^6.7.2",
    "nodemon": "^2.0.15",
    "sequelize": "^5.22.3",
    "sqlite3": "^5.0.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^27.4.7",
    "jest-watch-typeahead": "^0.6.5",
    "prettier": "^2.5.1",
    "smtp-server": "^3.7.0",
    "supertest": "^6.1.6"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "eqeqeq": "warn",
      "prettier/prettier": "warn"
    }
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120,
    "endOfLine": "auto"
  },
  "jest": {
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ]
  }
}
