{
  "name": "tdd-practice",
  "version": "1.0.0",
  "description": "test driven development practice",
  "main": "app.js",
  "scripts": {
    "dev:server": "node app.js",
    "jest:test": "jest --watch",
    "lint": "eslint . --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AveselsJS/tdd-practice.git"
  },
  "author": "Vladislav Pestsov <vladislav.pestsov@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/AveselsJS/tdd-practice/issues"
  },
  "homepage": "https://github.com/AveselsJS/tdd-practice#readme",
  "dependencies": {
    "express": "^4.17.2"
  },
  "devDependencies": {
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^27.4.7",
    "prettier": "^2.5.1",
    "supertest": "^6.1.6"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "eqeqeq": "warn",
      "prettier/prettier": "warn"
    }
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120,
    "endOfLine": "auto"
  }
}
